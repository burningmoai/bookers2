

<!--ユーザー一覧-->
<div class="container px-5 px-sm-0">
  <div class="row mt-2">
  <!--部分テンプレート-->
  <%= render 'info', user: @user,book: @book %>
<!--部分テンプレート-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead class="table-dark">
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>