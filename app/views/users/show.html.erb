
<div>
  <h2>User info</h2>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
</div>

<div>
  <p><%= link_to "Edit user",edit_user_path(@user) %></p>
</div>

<!--投稿フォーム作る-->
<h2>New book</h2>
<%= form_with model: @book, url: book_path,local:true do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :opinion %><br>
    <%= f.text_area :opinion %>
  </div>

  <div class="actions">
    <%= f.submit "Create Book" %>
  </div>
<% end %>

<!--投稿した本の一覧-->
<div>
  <h2>Books</h2>
  
</div>
