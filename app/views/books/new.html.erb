<h2>New book</h2>
<%= form_with model: @book, url: book_path,local:true do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :opinion %><br>
    <%= f.text_field :opinion %>
  </div>

  <div class="actions">
    <%= f.submit "Create Book" %>
  </div>
<% end %>
